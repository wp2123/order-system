<%if flash[:error] %>
  <div class="alert alert-danger">
    <%=flash[:error]%>
  </div>
<%end%>

<div class="auth-form">
  <%= form_for :session, url: {action: 'create'}, html: { class: "form-horizontal"} do |f| %>
    <div class="auth-form-header">
      <%= f.label '登录' %>
    </div>
    <div class="auth-form-body">
      <%= f.label :username, '用户名' %>
      <%= f.text_field :username, placeholder: '用户名' %>
      <%= f.label :password, '密码' %>
      <%= f.password_field :password, placeholder: '密码' %>
      <%= f.submit '登录', class: 'btn' %>
    </div>
  <% end %>
</div>
