<h2>所有用户</h2>
<%= link_to "新建用户", new_user_path %>
<table class="table">
  <tr>
    <th>用户名</th>
    <th>姓名</th>
    <th>邮箱</th>
    <th>电话</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <th><%= user.username %></th>
      <th><%= user.name %></th>
      <th><%= user.email %></th>
      <th><%= user.phone %></th>
    </tr>
  <% end %>
</table>

